	<profiles>
		<profile>
			<id>solr-webapp</id>
			<activation>
				<file>
					<missing>${basedir}/target/dependency/solr-3.3.0.war</missing>
				</file>
			</activation>
			<build>
				<finalName>portal</finalName>
				<plugins>
					<plugin>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>copy</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.solr</groupId>
									<artifactId>solr</artifactId>
									<version>3.3.0</version>
									<type>war</type>
								</artifactItem>
							</artifactItems>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>fascinator-home</id>
			<activation>
