## Save and redirect closeUrl if it is needed. If oid is needed, set appendOID: true
#set($oid = $formData.get("oid"))
<button id="$button-name" value="$action" #if($additional-classes)class="$additional-classes"#end #if($skip-validation) data-skip-validation="true" #end>$label</button>
<script type="text/javascript">
$('#$button-name').click( function () { 
	action= $(this).val();
	#if($closeUrl) 
		#if($appendOID) closeUrl="$portalPath/$closeUrl/$oid"; 
		#else closeUrl="$portalPath/$closeUrl"; #end
	#end
	if (action == 'close') {
		var r=confirm("Are you sure to close without saving?");
		if (r==false) {
		  return;
		} else {
		window.location = closeUrl;
		}
	} else {
		if ($(this).data('skip-validation') == true) {
			skipValidation = true;
			jaffa.form.save(true);
		} else {
			jaffa.form.save();
		}
	}
}
);
</script>
